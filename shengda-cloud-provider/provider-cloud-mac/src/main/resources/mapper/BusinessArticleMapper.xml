<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shengda.provider.mapper.BusinessArticleMapper">

    <resultMap id="BaseResultMap" type="com.shengda.provider.model.domain.BusinessArticle">
        <!--@mbg.generated-->
        <!--@Table mac_business_article-->
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="image_url" jdbcType="VARCHAR" property="imageUrl"/>
        <result column="card_id" jdbcType="BIGINT" property="cardId"/>
        <result column="url" jdbcType="VARCHAR" property="url"/>
        <result column="sort" jdbcType="INTEGER" property="sort"/>
        <result column="state" jdbcType="SMALLINT" property="state"/>
        <result column="remark" jdbcType="LONGVARCHAR" property="remark"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="version" jdbcType="INTEGER" property="version"/>
    </resultMap>

    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id, title, image_url, card_id, url, sort, `state`, remark, create_time, update_time,
        version
    </sql>

    <select id="queryPage" resultType="com.shengda.vo.BusinessArticleVo">
        select * from mac_business_article
        <where>
            1 = 1
            <if test="query.title != null and query.title != ''">
                and title like concat('%', #{query.title,jdbcType=VARCHAR}, '%')
            </if>
            <if test="query.state != null">
                and state = #{query.state,jdbcType=SMALLINT}
            </if>
        </where>
        order by create_time desc
    </select>

    <select id="queryPageByCardId" resultType="com.shengda.vo.BusinessArticleVo">
        select * from mac_business_article
        <where>
            card_id = #{cardId,jdbcType=BIGINT}
        </where>
        order by create_time desc
    </select>

</mapper>
